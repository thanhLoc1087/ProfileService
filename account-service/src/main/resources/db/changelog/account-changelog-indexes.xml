<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet author="account" id="add-index-table-account-column-email" runAlways="true">
        <preConditions onFail="CONTINUE" onFailMessage="index idx_account_email already exists">
            <not>
                <indexExists indexName="idx_account_email" />
            </not>
        </preConditions>
        <createIndex indexName="idx_account_email" tableName="account">
            <column name="email" />
        </createIndex>
    </changeSet>
</databaseChangeLog>